# Enable URL rewriting
RewriteEngine On

# Correct base path if your project is in a subfolder like: http://localhost/php-deliverease/
RewriteBase /php-deliverease/

# Don't rewrite requests for existing files or directories (including assets)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route /something to /something.php
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]

# Route /folder/ to /folder/index.php
RewriteRule ^([a-zA-Z0-9_-]+)/$ $1/index.php [L]

# Custom error pages
ErrorDocument 404 /index.php
ErrorDocument 403 /index.php
ErrorDocument 500 /index.php

# Block directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(sql|log|md)$">
    Require all denied
</FilesMatch>

<Files "config.php">
    Require all denied
</Files>

# Protect includes directory (if exists)
<Directory "/includes">
    Require all denied
</Directory>

# Set default charset
AddDefaultCharset UTF-8

# Enable compression (if module is available)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# PHP settings for XAMPP/local server
<IfModule mod_php.c>
    php_value upload_max_filesize 32M
    php_value post_max_size 32M
    php_value max_execution_time 600
    php_value max_input_time 600
</IfModule>