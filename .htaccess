# Enable URL rewriting
RewriteEngine On

# If your project is in a subfolder (like http://localhost/v2-ekclick/)
RewriteBase /v2-ekclick/

# Don't rewrite requests for existing files or directories (including assets)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route /something to /something.php
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]

# Route /folder to /folder/index.php
RewriteRule ^([a-zA-Z0-9_-]+)/$ $1/index.php [L]

# Custom error documents (optional, tweak as needed)
ErrorDocument 404 /index.php
ErrorDocument 403 /index.php
ErrorDocument 500 /index.php

# Block directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(sql|log|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

<Files config.php>
    Order allow,deny
    Deny from all
</Files>

# Protect includes directory (only if you don't serve assets from here)
<Directory "/includes">
    Order allow,deny
    Deny from all
</Directory>

# Set default charset
AddDefaultCharset UTF-8

# Compression (if supported)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Cache control for assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# PHP settings (check your XAMPP PHP module version)
<IfModule mod_php.c>
    php_value upload_max_filesize 32M
    php_value post_max_size 32M
    php_value max_execution_time 600
    php_value max_input_time 600
</IfModule>